<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createEvent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="506dp"
        android:background="#F2F2F2"
        android:backgroundTint="#00FFFFFF"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-14dp">

        <LinearLayout
            android:layout_width="379dp"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/backImg2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/left" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:text="Edit Event"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="74dp"
            android:orientation="vertical"
            android:paddingStart="45dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/EventTitleTv"
                android:layout_width="251dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:includeFontPadding="false"
                android:text="Event Title"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EventTitleInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F4EFEF"
                android:backgroundTint="#EEE9F0"
                android:fontFamily="@font/lexend_medium"
                android:hint=" Enter event title"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="45dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/eventStartTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_medium"
                android:text="Event Start"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/startDateTv"
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="#F4EFEF"
                    android:backgroundTint="#EEE9F0"
                    android:fontFamily="@font/lexend_medium"
                    android:hint=" Jun 10, 2024"
                    android:textSize="14sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/startTimeTv"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="#F4EFEF"
                    android:backgroundTint="#EEE9F0"
                    android:fontFamily="@font/lexend_medium"
                    android:hint="  9:15 AM"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:paddingStart="45dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/eventEndTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_medium"
                android:text="Event End"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/endDateTv"
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="#F4EFEF"
                    android:backgroundTint="#EEE9F0"
                    android:fontFamily="@font/lexend_medium"
                    android:hint=" Jun 10, 2024"
                    android:textSize="14sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/endTimeTv"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="#F4EFEF"
                    android:backgroundTint="#EEE9F0"
                    android:fontFamily="@font/lexend_medium"
                    android:hint=" 10:45 AM"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="45dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/NumAttendeesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:text="Number of Attendees"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/NumTv"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="#F4EFEF"
                android:backgroundTint="#EEE9F0"
                android:fontFamily="@font/lexend_medium"
                android:hint=" 34"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="45dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/Iconc"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:text="Icon Color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="7dp"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pngegg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="45dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/eventTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:text="Event Type"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#D9A35C"
                    app:chipSpacing="8dp"
                    app:singleLine="true"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_academic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Academic"
                        android:textColor="@android:color/black"
                        app:chipBackgroundColor="#87EBD7"
                        app:chipStrokeWidth="0dp"
                        app:closeIconTint="@android:color/black"
                        app:closeIconVisible="true"
                        app:strokeColor="@android:color/transparent" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_organizational"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organizational"
                        android:textColor="@android:color/black"
                        app:chipBackgroundColor="#EFA78A"
                        app:chipStrokeWidth="0dp"
                        app:closeIconTint="@android:color/black"
                        app:closeIconVisible="true"
                        app:strokeColor="@android:color/transparent" />

                </com.google.android.material.chip.ChipGroup>

                <ImageView
                    android:id="@+id/addIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_input_add"
                    app:tint="#000000" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="411dp"
        android:layout_height="237dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/receiveAlertTv"
            android:layout_width="289dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:fontFamily="@font/lexend_medium"
            android:text="Receive Alert"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.368"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="366dp"
            android:layout_height="35dp"
            android:fontFamily="@font/lexend_light"
            android:text="1 hour before event"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/receiveAlertTv"
            app:layout_constraintVertical_bias="0.055" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="359dp"
            android:layout_height="34dp"
            android:fontFamily="@font/lexend_light"
            android:text="1 day before event"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.865"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="359dp"
            android:layout_height="34dp"
            android:fontFamily="@font/lexend_light"
            android:text="Never"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.865"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton2"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/saveBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="#2196F3"
            app:fabCustomSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toEndOf="@+id/trashBt"
            app:layout_constraintTop_toBottomOf="@+id/radioButton3"
            app:layout_constraintVertical_bias="0.567"
            app:maxImageSize="15dp"
            app:srcCompat="@drawable/check"
            app:tint="@color/white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/trashBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="312dp"
            android:clickable="true"
            app:backgroundTint="#FFFFFF"
            app:fabCustomSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton3"
            app:layout_constraintVertical_bias="0.567"
            app:maxImageSize="15dp"
            app:srcCompat="@drawable/delete"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>