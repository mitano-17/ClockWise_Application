<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="MissingClass">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/left" />

        <TextView
            android:id="@+id/settings2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lexend"
            android:paddingStart="16dp"
            android:text="Progress"
            android:textSize="16sp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- Progress Summary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:layout_marginTop="16dp">

        <!-- Total Hours Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hourIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/hour_icon" />

            <TextView
                android:id="@+id/totalHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lexend_medium"
                android:text="0 hrs"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hourLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_light"
                android:text="Total Hours"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Total Events Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eventIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/events_icon" />

            <TextView
                android:id="@+id/totalEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lexend_medium"
                android:text="0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/eventLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_light"
                android:text="Total Events"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Missed Meetings Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/missedIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/missed_icon" />

            <TextView
                android:id="@+id/missedMeetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lexend_medium"
                android:text="0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/missedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_light"
                android:text="Missed Meetings"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Attendance Report -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lexend_medium"
        android:text="Attendance Report"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_light"
        android:text="last 7 days"
        android:textSize="14sp" />

    <!-- Filter Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <Button
            android:id="@+id/buttonDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:text="D"
            android:fontFamily="@font/lexend_medium"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonWeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:text="W"
            android:fontFamily="@font/lexend_medium"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:text="M"
            android:fontFamily="@font/lexend_medium"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>
