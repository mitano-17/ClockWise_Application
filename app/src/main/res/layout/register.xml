<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#BCC5F0"
    app:circularflow_radiusInDP="30px"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-150px"
        android:layout_marginBottom="30px"
        android:fontFamily="@font/lexend"
        android:text="Create an Account"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-350px"
        android:layout_marginTop="50px"
        android:layout_marginBottom="20px"
        android:text="Full Name"
        android:textAlignment="inherit"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20px"
        android:width="300dp"
        android:background="#D5D2EB"
        android:backgroundTint="#F0EEFA"
        android:ems="10"
        android:fontFamily="@font/lexend"
        android:hint="Enter your full name"
        android:inputType="text"
        android:paddingStart="10sp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-300px"
        android:layout_marginBottom="20px"
        android:text="Company Name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20px"
        android:width="300dp"
        android:background="#D5D2EB"
        android:backgroundTint="#F0EEFA"
        android:ems="10"
        android:fontFamily="@font/lexend"
        android:hint="Enter company/institution/organization name"
        android:inputType="text"
        android:paddingStart="10sp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-300px"
        android:layout_marginBottom="20px"
        android:text="Phone Number"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:width="300dp"
        android:background="#D5D2EB"
        android:layout_marginBottom="20px"
        android:backgroundTint="#F0EEFA"
        android:ems="10"
        android:fontFamily="@font/lexend"
        android:hint="Enter phone number"
        android:inputType="number"
        android:paddingStart="10sp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-340px"
        android:layout_marginBottom="20px"
        android:text="Password"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:width="300dp"
        android:layout_marginBottom="20px"
        android:background="#D5D2EB"
        android:backgroundTint="#F0EEFA"
        android:ems="10"
        android:fontFamily="@font/lexend"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10sp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-260px"
        android:layout_marginBottom="20px"
        android:text="Re-enter Password"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:width="300dp"
        android:background="#D5D2EB"
        android:backgroundTint="#F0EEFA"
        android:ems="10"
        android:fontFamily="@font/lexend"
        android:layout_marginBottom="50px"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10sp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="800px"
        android:backgroundTint="#3F51B5"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="300dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="Already have an account? Login."
        android:textColor="#000000"
        android:textSize="12sp" />

</LinearLayout>