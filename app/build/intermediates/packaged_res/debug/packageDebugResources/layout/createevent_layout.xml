<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createEvent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="713dp"
        android:layout_marginTop="32dp"
        android:background="#F2F2F2"
        android:backgroundTint="#00FFFFFF"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="379dp"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/backImgVw"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/left" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:text="Create Event"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="74dp"
            android:orientation="vertical"
            android:paddingStart="45dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/EventTitleTv"
                android:layout_width="251dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:includeFontPadding="false"
                android:text="Event Title"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EventTitleInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F4EFEF"
                android:backgroundTint="#EEE9F0"
                android:fontFamily="@font/lexend_medium"
                android:hint=" Enter event title"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="45dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/eventStartTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_medium"
                android:text="Event Start"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/startDateTv"
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="#F4EFEF"
                    android:backgroundTint="#EEE9F0"
                    android:fontFamily="@font/lexend_medium"
                    android:hint="Select Date"
                    android:textSize="14sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/startTimeTv"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="#F4EFEF"
                    android:backgroundTint="#EEE9F0"
                    android:fontFamily="@font/lexend_medium"
                    android:hint="Select Time"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:paddingStart="45dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/eventEndTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_medium"
                android:text="Event End"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/endDateTv"
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="#F4EFEF"
                    android:backgroundTint="#EEE9F0"
                    android:fontFamily="@font/lexend_medium"
                    android:hint="Select Date"
                    android:textSize="14sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/endTimeTv"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="#F4EFEF"
                    android:backgroundTint="#EEE9F0"
                    android:fontFamily="@font/lexend_medium"
                    android:hint="Select Time"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="45dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/NumAttendeesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:text="Number of Attendees"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/NumTv"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="#F4EFEF"
                android:backgroundTint="#EEE9F0"
                android:fontFamily="@font/lexend_medium"
                android:hint=" #"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="45dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/Iconc"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:text="Icon Color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/colorPicker"
                android:layout_width="7dp"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pngegg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="45dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/eventTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:text="Event Type"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#D9A35C"
                    app:chipSpacing="8dp"
                    app:singleLine="true"
                    app:singleSelection="false" />

                    <!--
                      <com.google.android.material.chip.Chip
                          android:id="@+id/chip_academic"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Academic"
                          android:textColor="@android:color/black"
                          app:chipBackgroundColor="#87EBD7"
                          app:chipStrokeWidth="0dp"
                          app:closeIconTint="@android:color/black"
                          app:closeIconVisible="true"
                          app:strokeColor="@android:color/transparent" />

                      <com.google.android.material.chip.Chip
                          android:id="@+id/chip_organizational"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Organizational"
                          android:textColor="@android:color/black"
                          app:chipBackgroundColor="#EFA78A"
                          app:chipStrokeWidth="0dp"
                          app:closeIconTint="@android:color/black"
                          app:closeIconVisible="true"
                          app:strokeColor="@android:color/transparent" />

                  </com.google.android.material.chip.ChipGroup>

                    -->

                <ImageView
                    android:id="@+id/addIcon"
                    android:layout_width="162dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_input_add"
                    app:tint="#000000" />

              </LinearLayout>


          </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/receiveAlertTv"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginStart="45dp"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_medium"
                android:text="Receive Alert"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="45dp"
                android:fontFamily="@font/lexend_light"
                android:text="1 hour before event"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="45dp"
                android:fontFamily="@font/lexend_light"
                android:text="1 day before event"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="45dp"
                android:fontFamily="@font/lexend_light"
                android:text="Never"
                android:textSize="12sp" />
        </RadioGroup>


          <LinearLayout
              android:layout_width="354dp"
              android:layout_height="67dp"
              android:layout_marginStart="45dp"
              android:layout_marginTop="35dp"
              android:orientation="horizontal">

              <Button
                  android:id="@+id/genQRBt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="130dp"
                  android:layout_weight="1"
                  android:backgroundTint="#ABA8AB"
                  android:fontFamily="@font/lexend_medium"
                  android:text="Generate QR"
                  android:textColor="#FFFFFF" />

              <com.google.android.material.floatingactionbutton.FloatingActionButton
                  android:id="@+id/createEvntBt"
                  android:layout_width="56dp"
                  android:layout_height="40dp"
                  android:layout_weight="1"
                  android:clickable="true"
                  app:backgroundTint="#2196F3"
                  app:fabCustomSize="40dp"
                  app:srcCompat="@android:drawable/ic_input_add"
                  app:tint="#FFFFFF" />

          </LinearLayout>

      </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>